<div class="header">
  <h1>Boardgames Online</h1>
  <h3>If you want to know where your favorite boardgame is available to play online, this page is for you!</h3>
</div>
<div class="empty"></div>
<div>
  <%= simple_form_for root_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a game"
    %>
    <%= submit_tag "Go!", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="table">
  <table>
    <tr>
      <th>Name</th>
      <th>Sites</th>
    </tr>
    <% @games.each do |game| %>
      <tr>
        <td>
          <%= link_to game.name, game.bgg_url %>
        </td>
        <td>
          <% game.sites.each do |site| %>
            <%= link_to site.name, site.url %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>