<% @games.sort_by(&:name).each do |game| %>
  <div class="card col-md-3 col-lg-2">
    <div class="card-body">
      <!-- Removed links to bgg while I don't have a way to provide them -->
      <!-- <h5 class="card-title"><%= link_to game.name, game.bgg_url, target: :_blank %></h5> -->
      <h5 class="card-title"><%= game.name %></h5>
      <% game.sites.each do |site| %>
        <%= link_to site.name, site.game_sites.where(game_id: game.id).first.game_url, class: "btn btn-light btn-sm", target: :_blank %>
      <% end %>
    </div>
  </div>
<% end %>
